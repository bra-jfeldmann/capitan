{{!-- forms/partials/select.hbs --}}
<div class="form__field-wrapper {{class}}">
    <select
            id="{{id}}"
            name="{{name}}"
            {{#if disabled}}disabled{{/if}}
            {{#if required}}required{{/if}}
    >
        {{#each options}}
        <option
                value="{{this.value}}"
                {{#if this.selected}}selected{{/if}}
        >
            {{this.text}}
        </option>
        {{/each}}
    </select>
    <label class="form__label" for="{{id}}">{{label}} {{#if required}}*{{/if}}</label>
{{#if required}}
	<div class="form__error">
		<small class="is-error">{{error}}</small>
	</div>
{{/if}}
</div>
