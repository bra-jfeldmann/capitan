{{!-- forms/partials/textarea.hbs --}}
<div class="form__field-wrapper {{class}}">
    <textarea
            id="{{id}}"
			name="{{name}}"
            title="{{label}}"
            placeholder="{{placeholder}}"
            {{#if disabled}}disabled{{/if}}
            {{#if required}}required{{/if}}
			{{#if errorMsg}}data-error-message="{{errorMsg}}" {{/if}}
    ></textarea>
    <label class="form__label" for="{{id}}">{{label}} {{#if required}}*{{/if}}</label>

	{{!-- Error Message box will be generated by javascript
			if "required" attribute is set
	{{!-- <div class="form__error"><small /></div> --}}
</div>
